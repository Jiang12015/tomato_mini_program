.login {
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.login .avatar {
  width: 270rpx;
  height: 270rpx;
  border-radius: 50%;
  margin-top: 283rpx;
  border: 16rpx solid #f6705a;
  overflow: hidden;
}

.name-wrapper {
  margin-top: 22rpx;
  padding: 10rpx 40rpx;
  border-bottom: 4rpx solid #f6705a;
}

.loginButton {
  width: 360rpx;
  height: 80rpx;
  border-radius: 16rpx;
  color: #fff;
  font-size: 26rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
  margin-top: 58rpx;
  background: linear-gradient(to right, #ef9b75, #f6705a);
  box-shadow: 0px 11px 32px 0px rgba(246, 112, 90, 0.30);
}

.login .binding {
  color: #f6705a;
  font-size: 24rpx;
  margin-top: 46rpx;
}
